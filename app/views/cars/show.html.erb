<%= simple_form_for [@car, Review.new] do |f| %>
  <div>
    <%= f.input :rating, label: "Rating (0â€“5)" %>
    <%= f.input :comment, label: "Your Comment" %>
  </div>
  <%= f.button :submit, "Submit Review" %>
<% end %>

